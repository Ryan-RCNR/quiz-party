{
  "name": "quiz-party",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "test:coverage": "turbo test:coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "dev:teacher": "turbo dev --filter=@quiz-party/teacher",
    "dev:student": "turbo dev --filter=@quiz-party/student",
    "build:teacher": "turbo build --filter=@quiz-party/teacher",
    "build:student": "turbo build --filter=@quiz-party/student"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.0",
    "@types/node": "^25.2.0",
    "turbo": "^2.3.0"
  },
  "packageManager": "pnpm@9.15.0"
}
